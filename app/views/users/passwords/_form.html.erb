<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "users/shared/error_messages" , resource: resource %>

        <div class="mb-3">
            <%= f.label :email, for: "exampleFormControlTitle" ,class: "form-label" %>
                <%= f.email_field :email, class: "form-control" , type: "email" , placeholder: "name@example.com" %>
        </div>

        <div class="actions justify-content-center">
            <%= f.submit "Send me password reset instructions" , class: "btn btn-primary" %>
        </div>
        <% end %>
