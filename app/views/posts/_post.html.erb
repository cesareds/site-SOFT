<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>User:</strong>
    <%= post.user.email%>
  </p>

  <p>
    <strong>Summary:</strong>
    <%= post.summary %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= post.content %>
  </p>

  <p>
    <strong>Feeling:</strong>
    <%= post.feeling %>
  </p>

  <p>
    <strong>Created at:</strong>
    <%= @day %>, <%= @time %>h
  </p>

</div>
